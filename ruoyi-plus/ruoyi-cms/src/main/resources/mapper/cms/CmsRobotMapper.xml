<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.CmsRobotMapper">
    
    <resultMap type="CmsRobot" id="CmsRobotResult">
        <result property="robotId"    column="robot_id"    />
        <result property="robotImg"    column="robot_img"    />
        <result property="robotName"    column="robot_name"    />
        <result property="robotFunction"    column="robot_function"    />
    </resultMap>

    <sql id="selectCmsRobotVo">
        select robot_id, robot_img, robot_name, robot_function from cms_robot
    </sql>

    <select id="selectCmsRobotList" parameterType="CmsRobot" resultMap="CmsRobotResult">
        <include refid="selectCmsRobotVo"/>
        <where>  
            <if test="robotId != null "> and robot_id = #{robotId}</if>
            <if test="robotImg != null  and robotImg != ''"> and robot_img = #{robotImg}</if>
            <if test="robotName != null  and robotName != ''"> and robot_name like concat('%', #{robotName}, '%')</if>
            <if test="robotFunction != null  and robotFunction != ''"> and robot_function = #{robotFunction}</if>
        </where>
    </select>
    
    <select id="selectCmsRobotByRobotId" parameterType="Long" resultMap="CmsRobotResult">
        <include refid="selectCmsRobotVo"/>
        where robot_id = #{robotId}
    </select>
        
    <insert id="insertCmsRobot" parameterType="CmsRobot">
        insert into cms_robot
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="robotId != null">robot_id,</if>
            <if test="robotImg != null and robotImg != ''">robot_img,</if>
            <if test="robotName != null and robotName != ''">robot_name,</if>
            <if test="robotFunction != null and robotFunction != ''">robot_function,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="robotId != null">#{robotId},</if>
            <if test="robotImg != null and robotImg != ''">#{robotImg},</if>
            <if test="robotName != null and robotName != ''">#{robotName},</if>
            <if test="robotFunction != null and robotFunction != ''">#{robotFunction},</if>
         </trim>
    </insert>

    <update id="updateCmsRobot" parameterType="CmsRobot">
        update cms_robot
        <trim prefix="SET" suffixOverrides=",">
            <if test="robotImg != null and robotImg != ''">robot_img = #{robotImg},</if>
            <if test="robotName != null and robotName != ''">robot_name = #{robotName},</if>
            <if test="robotFunction != null and robotFunction != ''">robot_function = #{robotFunction},</if>
        </trim>
        where robot_id = #{robotId}
    </update>

    <delete id="deleteCmsRobotByRobotId" parameterType="Long">
        delete from cms_robot where robot_id = #{robotId}
    </delete>

    <delete id="deleteCmsRobotByRobotIds" parameterType="String">
        delete from cms_robot where robot_id in 
        <foreach item="robotId" collection="array" open="(" separator="," close=")">
            #{robotId}
        </foreach>
    </delete>

</mapper>